<div class="container">
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success btn-create" href="/create"><i class="fa fa-plus"></i> Nueva Tarea</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover border text-center ">
                <thead class="bg-success text-light">
                    <tr>
                        <th class="border">ID</th>
                        <th class="border">Tarea</th>
                        <th class="border">Descripcion</th>
                        <th class="border">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each tasks}}
                    <tr>
                        <td>{{task_id}}</td>
                        <td>{{titulo}}</td>
                        <td>{{descripcion}}</td>
                        <td class="d-flex justify-content-center gap-2">
                            <form action="/tasks/delete" method="POST" class="formDestroy" id="formDestroy">
                            <input type="hidden" name="id" class="idDelete" value='{{task_id}}'>
                            {{!-- onclick="return confirm('Â¿Seguro que desea eliminar la tarea?')" --}}
                                <button class="btn btn-danger btnDelete" value="{{task_id}}" type="submit" ><i class="fa fa-trash"></i></button>
                            </form>
                            <a href="/tasks/edit/{{task_id}}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{!-- <input type="text" name="" id="" class="form-control" value="{{id}}"> --}}
        </div>
    </div>
</div>
</div>
